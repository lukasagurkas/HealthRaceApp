<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        android:layout_marginBottom="222dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/layout_step"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginBottom="320dp"
            android:background="@color/purple_500"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.422"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints">


            <ImageView
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="3dp"
                app:srcCompat="@drawable/pedestrian_smaller" />

            <ProgressBar
                android:id="@+id/progressBar_step"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="175dp"
                android:layout_height="20dp"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.841"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.084"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Steps: +50 points"
            android:textColor="@color/white"
            android:textSize="10dp" >

        </TextView>

    </FrameLayout>

    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        android:layout_marginBottom="162dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/layout_fruit"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginBottom="320dp"
            android:background="@color/purple_500"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.987"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/fruit_smaller" />

            <ProgressBar
                android:id="@+id/progressBar_fruit"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="175dp"
                android:layout_height="20dp"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.841"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.084"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Fruit: +100 points"
            android:textColor="@color/white"
            android:textSize="10dp">

        </TextView>

    </FrameLayout>

    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/layout_vegetable"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginBottom="90dp"
            android:background="@color/purple_500"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.943"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/vegetable_smaller" />

            <ProgressBar
                android:id="@+id/progressBar_veg"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="175dp"
                android:layout_height="20dp"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.841"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.084"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:text="Vegetables: +100 points"
            android:textColor="@color/white"
            android:textSize="10dp">

        </TextView>

    </FrameLayout>

    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        android:layout_marginBottom="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/layout_water"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="150dp"
            android:background="@color/purple_500"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.524"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/waterglass_smaller" />

            <ProgressBar
                android:id="@+id/progressBar_water"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="175dp"
                android:layout_height="20dp"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.841"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.084"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Water: +75 points"
            android:textColor="@color/white"
            android:textSize="10dp">

        </TextView>

    </FrameLayout>

    <Button
        android:id="@+id/buttonProfile"
        android:layout_width="148dp"
        android:layout_height="40dp"
        android:layout_marginBottom="288dp"
        android:text="Profile Page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonGroup"
        android:layout_width="130dp"
        android:layout_height="38dp"
        android:layout_marginBottom="192dp"
        android:text="@string/button_group_activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.918"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>